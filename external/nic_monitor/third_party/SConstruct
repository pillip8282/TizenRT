# scons -C '/home/kang/Workspace/TIZENRT/SA_NEW/third_party'
# valgrind --tool=memcheck --show-reachable=yes --leak-check=full --log-file=memcheck.txt -v --error-limit=no ./sa_sample 
import os

test_file = ['test_main.c']
test_file.append('te_test.c')
test_file.append('teq_test.c')
tinyevt_src = ['tiny_evtmgr.c']
tinyevt_src.append('tiny_evtqueue.c')

src_files = test_file + tinyevt_src

env = Environment(ENV = os.environ)

env.Append(CFLAGS=['-g'])
env.Append(CFLAGS=['-DLINUX'])
libraries = ['pthread']

env.Program('sa_sample', src_files, LIBS=libraries)

